{
  "$schema": "https://schemas.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for Giga Factory Command Center",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-spawn",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "claude",
          "cmd": "claude",
          "args": true
        },
        {
          "name": "agent",
          "cmd": "agent",
          "args": true
        }
      ]
    }
  ]
}
